<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Todos los productos'}) %>
<body>
	<% if (typeof newProduct !== "undefined") { %>
		<script>
			let url = window.location.href;
			url = url.split("products/");
			let newUrl = url[0] + "products/";
			window.history.pushState({page: "another"}, "another page", newUrl);


			if("<%= newProduct %>" == "borrado"){
				Swal.fire(
				'Producto borrado!',
				'',
				'error'
				)
			}else{
				Swal.fire(
				'Nuevo producto agregado!',
				"<%= newProduct.name %>",
				'success'
				)
			}
			
		</script>
	<% } %>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>
			
			<% products.forEach(({id,name,price,image,discount}) => { %> 
				<%- include('./partials/product',{
					id,
					name,
					price,
					image,
					discount,
					toThousand
				}) %> 
			<% }) %>
		</div>
	</div>
	<!-- /todos los productos -->
	
	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>